<section class="reviews-filters">
  <section class="reviews-filter reviews-filter-users js-reviews-filter-users">
    <header class="reviews-filter-header">
      <h2 class="reviews-filter-header-title">Users</h2>
      <div class="reviews-filter-header-count">({{selectedUsers.length}})</div>
    </header>
    <div class="reviews-filter-item-list-container">
      <ul class="reviews-filter-item-list">
        {{#each model.users as |user|}}
          <li class="reviews-filter-item it-reviews-filter-item-user">
            <label class="reviews-filter-item-checkbox-container">
              {{get selectedUsersCheckboxes user}}
              <input {{action "selectedUsersChanged" user on="change"}} type="checkbox" class="reviews-filter-item-checkbox" checked={{get selectedUsersCheckboxes user.id}} />
              <span class="reviews-filter-item-checkbox-txt">{{user.name}}</span>
            </label>
          </li>
        {{/each}}
      </ul>
    </div>
  </section>
  <section class="reviews-filter reviews-filter-projects js-reviews-filter-projects">
    <header class="reviews-filter-header">
      <h2 class="reviews-filter-header-title">Projects</h2>
      <div class="reviews-filter-header-count">({{selectedProjects.length}})</div>
    </header>
    <div class="reviews-filter-item-list-container">
      <ul class="reviews-filter-item-list">
        {{#each model.projects as |project|}}
          <li class="reviews-filter-item it-reviews-filter-item-project">
            <label class="reviews-filter-item-checkbox-container">
              <input {{action "selectedProjectsChanged" project on="change"}} type="checkbox" class="reviews-filter-item-checkbox" checked={{get selectedProjectsCheckboxes project.id}} />
              <span class="reviews-filter-item-checkbox-txt">{{project.name}}</span>
            </label>
          </li>
        {{/each}}
      </ul>
    </div>
  </section>
  <section class="reviews-filter reviews-filter-from">
    <div class="reviews-filter-from-txt">from</div>
    <header class="reviews-filter-header">
      <h2 {{action "changeSinceDate"}} class="reviews-filter-header-title">
        {{moment-format since "YYYY/MM/DD"}}
      </h2>
      <div class="reviews-filter-from-date js-since-datepicker" />
    </header>
  </section>
  <section class="reviews-filter reviews-filter-to">
    <div class="reviews-filter-to-txt">to</div>
    <header class="reviews-filter-header">
      <h2 {{action "changeBeforeDate"}} class="reviews-filter-header-title">
        {{moment-format before "YYYY/MM/DD"}}
      </h2>
      <div class="reviews-filter-to-date js-before-datepicker" />
    </header>
  </section>
</section>
{{entries-by-day
  list=entriesByDay
  didDeleteEntry=(action "didDeleteEntry")
  didUpdateEntry=(action "didUpdateEntry")
  searchProjects=(action "searchProjects")
}}
