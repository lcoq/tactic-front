<section class="reviews-filter reviews-filter-users js-reviews-filter-users">
  <header class="reviews-filter-header">
    <h2 class="reviews-filter-header-title">Users</h2>
    <div class="reviews-filter-header-count no-print">({{selectedUsers.length}}/{{users.length}})</div>
  </header>
  <div class="reviews-filter-item-list-container">
    <ul class="reviews-filter-item-list">
      <li class="reviews-filter-item reviews-filter-item-toggle no-print">
        <a {{action "checkAllUsers"}}>Select all</a>
        <a {{action "uncheckAllUsers"}}>Select none</a>
      </li>
      {{#each users as |user|}}
        <li class="reviews-filter-item it-reviews-filter-item-user {{unless (get selectedUsersCheckboxes user.id) "no-print"}}">
          <label class="reviews-filter-item-checkbox-container">
            <input {{action "selectedUsersChanged" user on="change"}} type="checkbox" class="reviews-filter-item-checkbox no-print" checked={{get selectedUsersCheckboxes user.id}} />
            <span class="reviews-filter-item-checkbox-txt">{{user.name}}</span>
          </label>
        </li>
      {{/each}}
    </ul>
  </div>
</section>
<section class="reviews-filter reviews-filter-projects js-reviews-filter-projects">
  <header class="reviews-filter-header">
    <h2 class="reviews-filter-header-title">Projects</h2>
    <div class="reviews-filter-header-count no-print">({{selectedProjects.length}}/{{projects.length}})</div>
  </header>
  <div class="reviews-filter-item-list-container">
    <ul class="reviews-filter-item-list">
      <li class="reviews-filter-item reviews-filter-item-toggle no-print">
        <a {{action "checkAllProjects"}}>Select all</a>
        <a {{action "uncheckAllProjects"}}>Select none</a>
      </li>
      {{#each projects as |project|}}
