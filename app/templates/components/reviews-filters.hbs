          <label class="reviews-filter-item-checkbox-container">
            <input {{action "selectedProjectsChanged" project on="change"}} type="checkbox" class="reviews-filter-item-checkbox no-print" checked={{get selectedProjectsCheckboxes project.id}} />
            <span class="reviews-filter-item-checkbox-txt">{{project.name}}</span>
